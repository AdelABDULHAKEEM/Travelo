@model Travelo.Models.User_Tabel

@{
    ViewBag.Title = "Forget_Password";
    Layout = "~/Views/Shared/Travelo_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="LogIn_Form">
        <h4>Forget Password</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Please enter your registered  Email Address", @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-12 text-danger">
            @ViewBag.ForgPass_Msg
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="LogIn_btn" title="send" />
            </div>
        </div>
    </div>
}

